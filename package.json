{
  "name": "simple-chat",
  "version": "0.1.0",
  "private": true,
  "main": "dist/src/backend/server.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "start": "node dist/src/backend/server.js",
    "dev": "concurrently \"ts-node-dev --respawn --transpile-only --esm src/backend/server.ts\" \"npm run dev:client\"",
    "build:client": "esbuild src/frontend/index.tsx --bundle --outfile=public/app.js --loader:.tsx=tsx --platform=browser --sourcemap",
    "dev:client": "esbuild src/frontend/index.tsx --bundle --outfile=public/app.js --loader:.tsx=tsx --platform=browser --watch"
  },
  "dependencies": {
    "@langchain/google-genai": "^0.2.16",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "langchain": "^0.3.31",
    "playwright": "^1.55.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^8.0.1",
    "esbuild": "^0.18.18",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
